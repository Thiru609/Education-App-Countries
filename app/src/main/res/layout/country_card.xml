<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="0dp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iw1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"

                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/flag"
                tools:srcCompat="@drawable/flag" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:src="@drawable/outline"
                card_view:layout_constraintBottom_toBottomOf="@id/iw1"
                card_view:layout_constraintEnd_toEndOf="@id/iw1"
                card_view:layout_constraintStart_toStartOf="@+id/iw1"
                card_view:layout_constraintTop_toTopOf="@+id/iw1" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:src="@drawable/outline1"
                card_view:layout_constraintBottom_toBottomOf="@id/iw1"
                card_view:layout_constraintEnd_toEndOf="@id/iw1"
                card_view:layout_constraintStart_toStartOf="@+id/iw1"
                card_view:layout_constraintTop_toTopOf="@+id/iw1" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:ems="9"
                android:fontFamily="@font/biryani"
                android:gravity="left"
                android:inputType="textCapWords"
                android:text="India"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toEndOf="@+id/iw1"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/twDesc"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/biryani"
                android:inputType="textCapWords"
                android:text="South-Western Asia"
                android:textColor="#94000000"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/iw1"
                card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tvMisc"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/biryani"
                android:inputType="textCapWords"
                android:text="Asia"
                android:textColor="#94000000"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/textView"
                card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="@font/biryani"
                android:text=","
                android:textColor="#94000000"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/twDesc"
                card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/biryani"
                android:text="Delhi"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/iw1"
                card_view:layout_constraintTop_toBottomOf="@+id/twDesc" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>