<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView

        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="0dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iw1"
                android:layout_width="wrap_content"

                android:layout_height="120dp"
                android:layout_marginTop="80dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/flag"
                tools:srcCompat="@drawable/flag" />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:fontFamily="@font/biryani"
                android:gravity="center_horizontal"
                android:inputType="textCapWords"
                android:text="India"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/iw1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:gravity="center_horizontal"
                android:text=","
                android:textColor="#000000"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toStartOf="@+id/tvMisc"
                card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/twDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:gravity="center_horizontal"
                android:inputType="textCapWords"
                android:text="South-Western Asia"
                android:textColor="#000000"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toStartOf="@+id/textView"
                card_view:layout_constraintHorizontal_bias="1.0"
                card_view:layout_constraintStart_toStartOf="@+id/tv1"
                card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tvMisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="88dp"
                android:layout_marginRight="88dp"
                android:fontFamily="@font/biryani"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:inputType="textCapWords"
                android:text="Asia"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toEndOf="@+id/tv1"
                card_view:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/biryani"
                android:gravity="center_horizontal"
                android:text="Capital:"
                android:textColor="#000000"
                android:textSize="20sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/twDesc" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/biryani"
                android:gravity="center_horizontal"
                android:text="Delhi"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.02"
                card_view:layout_constraintStart_toEndOf="@+id/textView2"
                card_view:layout_constraintTop_toBottomOf="@+id/twDesc" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:text="Population:"
                android:textColor="#000000"
                android:textSize="20sp"
                card_view:layout_constraintStart_toStartOf="@+id/textView2"
                card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:text="15897643"
                android:textSize="20sp"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintEnd_toEndOf="@+id/textView3"
                card_view:layout_constraintStart_toEndOf="@+id/textView4"
                card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:textColor="#000000"
                android:text="Languages:"
                android:textSize="20sp"
                card_view:layout_constraintStart_toStartOf="@+id/textView4"
                card_view:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:fontFamily="@font/biryani"
                android:text="Hindi, Tamil, Telugu, Marathi, Parsi, Kannda, Malayalam, Bengali"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toEndOf="@+id/textView5"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toEndOf="@+id/textView6"
                card_view:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:textColor="#000000"
                android:text="Borders:"
                android:textSize="20sp"
                card_view:layout_constraintStart_toStartOf="@+id/textView6"
                card_view:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/biryani"
                android:text="Pakistan, China, Bangladesh, Afganisthan"
                android:textSize="20sp"
                android:ems="7"
                card_view:layout_constraintEnd_toEndOf="@+id/textView7"
                card_view:layout_constraintHorizontal_bias="0.0
"
                card_view:layout_constraintStart_toEndOf="@+id/textView8"
                card_view:layout_constraintTop_toBottomOf="@+id/textView7" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>